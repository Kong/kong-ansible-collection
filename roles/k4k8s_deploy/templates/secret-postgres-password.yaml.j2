---
apiVersion: v1
kind: Secret
metadata:
  name: {{ k4k8s_deploy_postgres_password_secret_name }}
  namespace: {{ k4k8s_deploy_namespace }}
type: Opaque
data:
  {{ k4k8s_deploy_postgres_admin_password_secret_key }}: {{ k4k8s_deploy_postgres_admin_password | string | b64encode }}
  {{ k4k8s_deploy_postgres_user_password_secret_key }}: {{ k4k8s_deploy_postgres_user_password | string | b64encode }}